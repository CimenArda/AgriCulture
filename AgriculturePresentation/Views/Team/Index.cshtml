@using EntityLayer.Concrete
@model List<Team>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ekip Listesi</h4>
            
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>ID</th>
                            <th>Ad-Soyad</th>
                            <th>Görev</th>
                            <th>Sil</th>
                            <th>Düzenle</th>



                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            
                    
                        <tr>
                            <td class="py-1"><img src="@item.ImageUrl" alt="image" />
                            </td>
                            <td>@item.TeamID</td>
                             <td>@item.PersonName</td>
                             <td>@item.Title</td>
                             <td><a href="/Team/DeleteTeam/@item.TeamID" class="btn btn-danger">Sil</a></td>
                              <td><a href="/Team/EditTeam/@item.TeamID" class="btn btn-success">Düzenle</a></td>

                        </tr>
                        }
                    </tbody>
                    <a href="/Team/AddTeam/" class="btn btn-success">Yeni Ekip Arkadaşı Girişi</a>
                </table>
            </div>
        </div>
    </div>
</div>

