@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Görsel Kaydı</h4>

            <form class="forms-sample" method="post">

                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Title)
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Description)

                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Resim URL</label>
                    <input type="text" asp-for="ImageUrl" class="form-control"  />
                    @Html.ValidationMessageFor(x => x.ImageUrl)

                </div>



                <button type="submit" class="btn btn-primary me-2">Ekle</button>
            </form>
        </div>
    </div>
</div>