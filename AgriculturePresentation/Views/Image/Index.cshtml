@using EntityLayer.Concrete
@model List<Image>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Görsel Listesi</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                            <th>Sil</th>
                            <th>Düzenle</th>



                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr>

                                <td class="py-1"><img src="@item.ImageUrl" alt="image"/></td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><a href="/Image/DeleteImage/@item.ImageID" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Image/EditImage/@item.ImageID" class="btn btn-success">Düzenle</a></td>

                            </tr>
                        }
                    </tbody>
                    <a href="/Image/AddImage/" class="btn btn-success">Yeni Görsel Girişi</a>
                </table>
            </div>
        </div>
    </div>
</div>

