@using EntityLayer.Concrete
@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ekip Listesi</h4>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad-Soyad</th>
                            <th>Mail Adresi</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Detay Gör</th>





                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr>
                                <td>@item.ContactID</td>
                                <td>@item.Name</td>
                                <td>@item.Mail</td>
                                <td>@item.Date</td>

                                <td><a href="/Contact/DeleteMessage/@item.ContactID" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Contact/DetailsMessage/@item.ContactID" class="btn btn-danger">Detay Gör</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>