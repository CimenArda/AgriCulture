@model AgriculturePresentation.Models.UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Güncelleme</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label >Mail Adresi</label>
                    <input type="text" asp-for="Mail" class="form-control" />
                </div>
                <div class="form-group">
                    <label >Telefon Numarası</label>
                    <input type="text" asp-for="Phone" class="form-control" />

                </div>
                <div class="form-group">
                    <label >Şifre</label>
                    <input type="password" asp-for="Password" placeholder="Yeni şifrenizi giriniz.." class="form-control" />

                </div>
                <div class="form-group">
                    <label>Şifre Doğrulama</label>
                    <input type="password" asp-for="ConfirmPassword" placeholder="Yeni şifrenizi  tekrar giriniz.." class="form-control" />

                </div>
                

                <button type="submit" class="btn btn-primary me-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>