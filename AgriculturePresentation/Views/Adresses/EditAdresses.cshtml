@model EntityLayer.Concrete.Adress
@{
    ViewData["Title"] = "EditAdresses";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adres Güncelleme</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.AdressID)
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 1 </label>
                    <input type="text" asp-for="Description1" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Description1)
                </div>
             <br />

                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 2 </label>
                    <input type="text" asp-for="Description2" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Description2)
                </div>

                <br />
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 3 </label>
                    <input type="text" asp-for="Description3" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Description3)
                </div>
                <br />
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 4 </label>
                    <input type="text" asp-for="Description4" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Description1)
                </div>
                <br />
                <div class="form-group">
                    <label for="exampleInputName1">Harita Konumu </label>
                    <input type="text" asp-for="Mapinfo" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Mapinfo)
                </div>

                <button type="submit" class="btn btn-primary me-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>

