@model EntityLayer.Concrete.SocialMedia
@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sosyal Medya Bilgilerini Düzenleme</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.SocialMediaID)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">İkon</label>
                    <input type="text" asp-for="Icon" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Url</label>
                    <input type="text" asp-for="Url" class="form-control" />

                </div>


                <button type="submit" class="btn btn-primary me-2">Düzenle</button>
            </form>
        </div>
    </div>
</div>

