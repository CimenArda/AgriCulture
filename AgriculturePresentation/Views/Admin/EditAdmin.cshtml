@model EntityLayer.Concrete.Admin

@{
    ViewData["Title"] = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin Düzenleme</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.AdminID)
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı</label>
                    <input type="text" asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Şifre</label>
                    <input type="password" asp-for="Password" class="form-control" />
                </div>
              


                <button type="submit" class="btn btn-primary me-2">Düzenle</button>
            </form>
        </div>
    </div>
</div>
