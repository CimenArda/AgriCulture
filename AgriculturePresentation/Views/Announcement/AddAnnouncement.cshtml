@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Duyuru Kaydı</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" />
                   
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama </label>
                    <input type="text" asp-for="Description" class="form-control" />


                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Tarih</label>
                    <input type="date" asp-for="Date" class="form-control" />

                </div>
                <button type="submit" class="btn btn-primary me-2">Ekle</button>
            </form>
        </div>
    </div>
</div>