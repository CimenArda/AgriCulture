@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Düzenleme</h4>

            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.AnnouncementID)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Tarih</label>
                    <input type="date" asp-for="Date" class="form-control" />

                </div>

          
                <button type="submit" class="btn btn-primary me-2">Düzenle</button>
            </form>
        </div>
    </div>
</div>

