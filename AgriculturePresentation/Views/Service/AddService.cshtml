@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Hizmet Kaydı</h4>
               
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label for="exampleInputName1">Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Title)
                    @* <span asp-validation-for="Title" class="text-danger"></span> *@
                </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Görsel Yolu</label>
                    <input type="text" asp-for="Image" class="form-control" />


                </div>
              
                    <div class="form-group">
                        <label for="exampleTextarea1">Açıklama</label>
                    <input type="text" asp-for="Description" class="form-control" />
                    @Html.ValidationMessageFor(x => x.Description)

                </div>
                    <button type="submit" class="btn btn-primary me-2">Ekle</button>
                </form>
            </div>
        </div>
    </div>
